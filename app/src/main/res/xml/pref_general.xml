<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="salario"
        android:title="@string/pref_title_salario"
        android:defaultValue="@string/pref_default_salario"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="horasMes"
        android:title="@string/pref_title_horas_mes"
        android:defaultValue="@string/pref_default_horas_mes"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="adicional"
        android:title="@string/pref_title_adicional"
        android:defaultValue="@string/pref_default_adicional"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
